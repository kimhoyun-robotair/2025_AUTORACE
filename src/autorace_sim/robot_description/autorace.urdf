<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="autorace_car">

  <!-- include macros -->
  <xacro:include filename="$(find autorace_sim)/robot_description/inertial_macros.xacro"/>
  <xacro:include filename="$(find autorace_sim)/robot_description/sensors_module.xacro"/>
  <xacro:include filename="$(find autorace_sim)/robot_description/autorace.gazebo"/>

  <!-- geometry params -->
  <xacro:property name="ch_len" value="0.36"/>
  <xacro:property name="ch_wid" value="0.14"/>
  <xacro:property name="ch_hei" value="0.12"/>

  <xacro:property name="wheel_r"   value="0.0325"/>
  <xacro:property name="wheel_len" value="0.025"/>

  <xacro:property name="wheelbase"   value="0.26"/>
  <xacro:property name="front_x"     value="${ wheelbase/2.0}"/>   <!-- 0.13 -->
  <xacro:property name="rear_x"      value="${-wheelbase/2.0}"/>   <!-- -0.13 -->

  <!-- track / half-track -->
  <xacro:property name="track"       value="0.175"/>               <!-- ~0.175 m computed -->
  <xacro:property name="half_track"  value="${track/2.0}"/>        <!-- 0.0875 -->

  <xacro:property name="m_chassis" value="7.0"/>
  <xacro:property name="m_wheel"   value="0.10"/>

  <!-- base frame -->
  <link name="base_footprint"/>
  <joint name="chassis_joint" type="fixed">
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <parent link="base_footprint"/>
    <child link="chassis"/>
  </joint>

  <!-- ================= chassis ================= -->
  <link name="chassis">
    <visual>
      <origin xyz="0 0 0.08" rpy="0 0 0"/>
      <geometry><box size="${ch_len} ${ch_wid} ${ch_hei}"/></geometry>
      <material name="black"><color rgba="0.1 0.1 0.1 1.0"/></material>
    </visual>
    <collision>
      <origin xyz="0 0 0.08" rpy="0 0 0"/>
      <geometry><box size="${ch_len} ${ch_wid} ${ch_hei}"/></geometry>
    </collision>
    <xacro:inertial_box mass="${m_chassis}"
                        x="${ch_len}" y="${ch_wid}" z="${ch_hei}">
      <origin xyz="0 0 0.08" rpy="0 0 0"/>
    </xacro:inertial_box>
  </link>

  <!-- ================= FRONT STEERING KNUCKLES ================= -->
  <!-- 좌전 스티어링 힌지: 회전축 z -->
  <joint name="front_left_steer_joint" type="revolute">
    <origin xyz="${front_x} ${half_track} ${wheel_r}" rpy="0 0 0"/>
    <parent link="chassis"/>
    <child  link="front_left_knuckle"/>
    <axis xyz="0 0 1"/>
    <limit lower="-0.5" upper="0.5" effort="50" velocity="1.5"/>
    <dynamics damping="0.2" friction="0.0"/>
  </joint>
  <link name="front_left_knuckle">
    <inertial>
      <mass value="0.01"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="1e-5" iyy="1e-5" izz="1e-5" ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>

  <!-- 우전 스티어링 힌지 -->
  <joint name="front_right_steer_joint" type="revolute">
    <origin xyz="${front_x} ${-half_track} ${wheel_r}" rpy="0 0 0"/>
    <parent link="chassis"/>
    <child  link="front_right_knuckle"/>
    <axis xyz="0 0 1"/>
    <limit lower="-0.5" upper="0.5" effort="50" velocity="1.5"/>
    <dynamics damping="0.2" friction="0.0"/>
  </joint>
  <link name="front_right_knuckle">
    <inertial>
      <mass value="0.01"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="1e-5" iyy="1e-5" izz="1e-5" ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>

  <!-- ================= WHEELS ================= -->
  <!-- 앞왼 회전 -->
  <joint name="front_left_wheel_joint" type="continuous">
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <parent link="front_left_knuckle"/>
    <child  link="front_left_wheel"/>
    <axis xyz="0 1 0"/>
    <dynamics damping="0.2" friction="0.1"/>
  </joint>
  <link name="front_left_wheel">
    <visual>
      <origin xyz="0 0 0" rpy="0 1.5708 1.5708"/>
      <geometry><cylinder radius="${wheel_r}" length="${wheel_len}"/></geometry>
      <material name="green"><color rgba="0.2 0.8 0.2 1.0"/></material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 1.5708 1.5708"/>
      <geometry><cylinder radius="${wheel_r}" length="${wheel_len}"/></geometry>
    </collision>
    <xacro:inertial_cylinder mass="${m_wheel}"
                             length="${wheel_len}" radius="${wheel_r}">
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </xacro:inertial_cylinder>
  </link>

  <!-- 앞오 회전 -->
  <joint name="front_right_wheel_joint" type="continuous">
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <parent link="front_right_knuckle"/>
    <child  link="front_right_wheel"/>
    <axis xyz="0 1 0"/>
    <dynamics damping="0.2" friction="0.1"/>
  </joint>
  <link name="front_right_wheel">
    <visual>
      <origin xyz="0 0 0" rpy="0 1.5708 1.5708"/>
      <geometry><cylinder radius="${wheel_r}" length="${wheel_len}"/></geometry>
      <material name="green"><color rgba="0.2 0.8 0.2 1.0"/></material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 1.5708 1.5708"/>
      <geometry><cylinder radius="${wheel_r}" length="${wheel_len}"/></geometry>
    </collision>
    <xacro:inertial_cylinder mass="${m_wheel}"
                             length="${wheel_len}" radius="${wheel_r}">
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </xacro:inertial_cylinder>
  </link>

  <!-- 뒤왼 구동 바퀴 -->
  <joint name="rear_left_wheel_joint" type="continuous">
    <origin xyz="${rear_x} ${half_track} ${wheel_r}" rpy="0 0 0"/>
    <parent link="chassis"/>
    <child  link="rear_left_wheel"/>
    <axis xyz="0 1 0"/>
    <dynamics damping="0.2" friction="0.1"/>
  </joint>
  <link name="rear_left_wheel">
    <visual>
      <origin xyz="0 0 0" rpy="0 1.5708 1.5708"/>
      <geometry><cylinder radius="${wheel_r}" length="${wheel_len}"/></geometry>
      <material name="green"><color rgba="0.2 0.8 0.2 1.0"/></material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 1.5708 1.5708"/>
      <geometry><cylinder radius="${wheel_r}" length="${wheel_len}"/></geometry>
    </collision>
    <xacro:inertial_cylinder mass="${m_wheel}"
                             length="${wheel_len}" radius="${wheel_r}">
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </xacro:inertial_cylinder>
  </link>

  <!-- 뒤오 구동 바퀴 -->
  <joint name="rear_right_wheel_joint" type="continuous">
    <origin xyz="${rear_x} ${-half_track} ${wheel_r}" rpy="0 0 0"/>
    <parent link="chassis"/>
    <child  link="rear_right_wheel"/>
    <axis xyz="0 1 0"/>
    <dynamics damping="0.2" friction="0.1"/>
  </joint>
  <link name="rear_right_wheel">
    <visual>
      <origin xyz="0 0 0" rpy="0 1.5708 1.5708"/>
      <geometry><cylinder radius="${wheel_r}" length="${wheel_len}"/></geometry>
      <material name="green"><color rgba="0.2 0.8 0.2 1.0"/></material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 1.5708 1.5708"/>
      <geometry><cylinder radius="${wheel_r}" length="${wheel_len}"/></geometry>
    </collision>
    <xacro:inertial_cylinder mass="${m_wheel}"
                             length="${wheel_len}" radius="${wheel_r}">
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </xacro:inertial_cylinder>
  </link>

  <!-- ================= 센서 장착 ================= -->
  <xacro:mount_front_camera_imu parent_link="chassis"/>
  <xacro:mount_top_lidar_with_pedestal parent_link="chassis"
                                      lidar_back_face_x="-0.05"
                                      pedestal_h="0.06"/>
  <!-- 센서 플러그인 활성화 -->
  <xacro:enable_sensor_plugins
      enable_camera="true"
      enable_lidar="true"
      enable_imu="true"

      cam_link="front_cam_imu_link"
      cam_topic="/camera/image"

      lidar_link="top_lidar_link"
      scan_topic="/scan"

      imu_link="imu_link"
      imu_topic="/imu"/>

  <!-- ================= Gazebo 물리 / Ackermann 플러그인 ================= -->
  <xacro:autorace_gazebo_block
      chassis_link="chassis"
      fl_wheel="front_left_wheel"
      fr_wheel="front_right_wheel"
      rl_wheel="rear_left_wheel"
      rr_wheel="rear_right_wheel"
      fl_steer="front_left_steer_joint"
      fr_steer="front_right_steer_joint"
      rl_joint="rear_left_wheel_joint"
      rr_joint="rear_right_wheel_joint"
      wheelbase="${wheelbase}"
      track="${track}"
      wheel_radius="${wheel_r}"/>

</robot>